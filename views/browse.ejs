<body>
  <header class="coug-crimson text-white p-4 justify-content-between align-items-center p-4 flex-wrap">
    <div class="container-fluid">
      <div class="row align-items-center g-3">
        <div class="col-12 col-md-3 text-center text-md-start">
          <h1 class="m-0">
            <a href="/landing-page" class="text-white text-decoration-none">CougList</a>
          </h1>
        </div>
        <div class="col-12 col-md-6">
          <input type="text" class="form-control rounded-pill px-4" placeholder="Search for items">
        </div>
        <div class="col-12 col-md-3 text-center text-md-end">
            <nav>
                <a href="/" class="mx-2 fw-bold text-white">Home</a>
                <% if (user) { %>
                    <a href="/dashboard" class="mx-2 fw-bold text-white">Dashboard</a>
                    <a href="/logout" class="mx-2 fw-bold text-white">Logout</a>
                <% } else { %>
                    <a href="/login" class="mx-2 fw-bold text-white">Login</a>
                    <a href="/register" class="mx-2 fw-bold text-white">Register</a>
                <% } %>
                <a href="/about-us" class="mx-2 fw-bold text-white">About</a>
            </nav>
        </div>
      </div>
    </div>
  </header>

  <!-- Categories -->
  <section class="container my-4">
    <p class="fw-bold">Categories:</p>
    <div class="btn-group flex-wrap">
      <button class="btn btn-outline-danger px-4 py-2 fs-5 me-1 mb-1">All</button>
      <button class="btn btn-outline-danger px-4 py-2 fs-5 me-1 mb-1">Furniture</button>
