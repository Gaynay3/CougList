<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>CougList - Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header class="coug-crimson text-white d-flex justify-content-between align-items-center p-4 flex-wrap">
    <h1 class="m-0"><a href="/" style="text-decoration: none; color: inherit;">CougList</a></h1>
    <nav>
      <a href="/" class="mx-3 fw-bold text-white">Home</a>
    <a href="/browse" class="mx-3 fw-bold text-white">Browse</a>
    <a href="about-us.html" class="mx-3 fw-bold text-white">About</a>
    </nav>
  </header>

  <div class="container my-5">
    <h2 class="dash-titles dash text-center">Dashboard</h2>
    <div class="row justify-content-center g-4 mb-5">
      <div class="col-md-6">
        <div class="card p-4 border-0 card-highlight h-100">
          <h4 class="dash-titles mb-3">Your Inbox</h4>

          <% if (conversations.length === 0) { %>
            <p>No messages yet.</p>
          <% } else { %>
            <% conversations.forEach(conv => {
                const msg = conv.Messages[0];
            %>
              <% if (conv.otherUser) { %>
                <div class="message-preview <%= msg ? '' : 'unread' %> mb-2">
                  <strong><%= conv.otherUser.username %></strong><br>
                  <small>Item: <%= conv.Listing.title %></small><br>
                  <span><%= msg ? msg.content : 'No messages yet' %></span>
                </div>
              <% } else { %>
                <div class="message-preview text-muted mb-2">
                  <strong>Unknown User</strong><br>
                  <small>Item: <%= conv.Listing.title %></small><br>
                  <span><%= msg ? msg.content : 'No messages yet' %></span>
                </div>
              <% } %>
            <% }); %>
          <% } %>

          <div class="text-center mt-3">
            <a href="/inbox" class="btn btn-outline-danger btn-pill px-4">View All Messages</a>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card p-4 bg-light border-0 card-highlight d-flex flex-column align-items-center text-center h-100 justify-content-center">
          <h4 class="mb-2"><b>Clear out some clutter!</b></h4>
          <p class="text-muted mb-3">Ready to post a new item for sale?</p>
          <a href="/listing.html" class="btn btn-danger btn-pill mt-2 px-5">Post Listing</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="coug-crimson text-white text-center p-3 fixed-bottom">
    &copy; 2025 CougList - Washington State University
  </footer>

  <script src="/script/script.js"></script>
</body>
</html>
