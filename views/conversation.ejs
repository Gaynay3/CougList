<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
     <link rel="stylesheet" href="css/style.css"/>
</head>
<body>
    <div class="container my-5">
    <h2 class="text-danger mb-4">Conversation with <%= recipient %></h2>
    
    <div class="chat-box d-flex flex-column mb-4">
      <% messages.forEach(msg => { %>
        <div class="message <%= msg.senderUsername === username ? 'sent' : 'received' %>">
          <strong><%= msg.senderUsername %>:</strong> <%= msg.messageText %><br>
          <small><%= new Date(msg.createdAt).toLocaleString() %></small>
        </div>
      <% }) %>
    </div>

    <form action="/messages/send" method="POST" class="d-flex gap-3">
      <input type="hidden" name="conversationId" value="<%= conversationId %>">
      <input type="hidden" name="senderUsername" value="<%= username %>">
      <input type="hidden" name="receiverUsername" value="<%= recipient %>">
      <input type="text" name="messageText" class="form-control" placeholder="Type your message..." required>
      <button type="submit" class="btn btn-danger">Send</button>
    </form>
  </div>
</body>
</html>
